@using Web_Development.Models
@{
    Layout = "Layout";
    ViewData["Title"] = "Catalogue";
}

<section class="card-items">
    <div class="cards">
         @foreach (Product product in ViewBag.products)
         {
             <div class="record-card">
                 <div class="record-header">
                     <div class="play-btn"></div>
                 </div>
                 <a href="#">
                     <div class="record-footer">
                         <span class="record-title">@product.Record.Title</span>
                         <span class="record-artist">@product.Record.Artist</span>
                         <span class="record-price">â‚¬@product.Price</span>
                     </div>
                 </a>
             </div>
         }
    </div>
</section>
<section class="pagination">
    <div class="previous"><i class="fas fa-arrow-left"></i></div>
    <div class="current">1</div>
    <div class="next"><i class="fas fa-arrow-right"></i></div>
</section>