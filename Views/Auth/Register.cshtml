@{
    Layout = "Layout";
    ViewData["Title"] = "Register";
}

<section class="auth-box">
    <span class="title">Aanmelden</span>
    <form method="post" action="@Url.Action("Register")">
        <section class="boxes">
            <div class="box">
                <input required type="text" name="Name" placeholder="Naam">
                <input required type="text" name="Email" placeholder="Email">
                <input required type="password" name="Password" placeholder="Wachtwoord">
            </div>
            <div class="box">
                <input required type="text" name="Address" placeholder="Adres">
                <input required type="text" name="PostalCode" placeholder="Postcode">
                <input required type="text" name="Country" placeholder="Land">
            </div>
        </section>
        <button type="submit">Aanmelden</button>
    </form>
    <span>Heb je al een account?</span>
    <a href="@Url.Action("Login")">Login</a>
</section>